<Window x:Class="Do_an_phan_mem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Do_an_phan_mem"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="936">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="121*"/>
            <ColumnDefinition Width="679*"/>
        </Grid.ColumnDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="420" MinWidth="350"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,1,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="30">

                        <Grid Margin="0,0,0,30">
                            <StackPanel HorizontalAlignment="Center">
                                <Border Width="100" Height="100" CornerRadius="50" BorderThickness="3" BorderBrush="White" HorizontalAlignment="Center">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.1"/>
                                    </Border.Effect>
                                    <Grid>
                                        <Ellipse Fill="#2C3E50"/>
                                        <TextBlock Text="AD" Foreground="White" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>

                                <TextBlock Text="SYSTEM ADMIN" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,15,0,5"/>
                                <TextBlock Text="BIM Manager Dashboard" FontSize="14" Foreground="{StaticResource TextGrayBrush}" HorizontalAlignment="Center"/>

                                <Border Background="#F5F5F5" CornerRadius="12" Padding="12,4" HorizontalAlignment="Center" Margin="0,10,0,0">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="&#xE77B;" FontFamily="Segoe MDL2 Assets" Foreground="{StaticResource BrandGreenBrush}" Margin="0,1,6,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="Active Session" FontSize="12" Foreground="#444" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </Grid>

                        <Separator Margin="0,0,0,25" Background="#EEE"/>

                        <TextBlock Text="1. Chọn tương tác:" FontWeight="Bold" FontSize="15" Margin="0,10,0,10" Foreground="#333"/>
                        <UniformGrid Columns="2">
                            <RadioButton Style="{StaticResource ChoiceRadioStyle}" Content="Kiến trúc" Tag="RV" GroupName="ModelGroup" IsChecked="True"/>
                            <RadioButton Style="{StaticResource ChoiceRadioStyle}" Content="Kết cấu" Tag="RV" GroupName="ModelGroup"/>
                            <RadioButton Style="{StaticResource ChoiceRadioStyle}" Content="M.E.P" Tag="RV" GroupName="ModelGroup"/>
                            <RadioButton Style="{StaticResource ChoiceRadioStyle}" Content="Thiết Bị" Tag="EX" GroupName="ModelGroup"/>
                        </UniformGrid>

                        <Separator Margin="0,10,0,25" Background="#EEE"/>

                        <TextBlock Text="Thực thi:" FontWeight="Bold" FontSize="15" Margin="0,0,0,10" Foreground="#333"/>
                        <StackPanel>
                            <Button Style="{StaticResource ActionButtonStyle}" Background="{StaticResource BrandGreenBrush}" Content="MỞ FILE (OPEN)"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <GridSplitter Grid.Column="0" Width="4" HorizontalAlignment="Right" VerticalAlignment="Stretch" Background="Transparent" ShowsPreview="True"/>

            <Grid Grid.Column="1" Background="#F8F9FA">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="White" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="0,0,0,1" Padding="20,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Xem trước" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>

                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <Button Content="&#xE710;" FontFamily="Segoe MDL2 Assets" Background="Transparent" BorderThickness="0" Margin="0,0,10,0"/>
                            <Button Content="&#xE74D;" FontFamily="Segoe MDL2 Assets" Background="Transparent" BorderThickness="0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Grid.Row="1" Margin="20">
                    <Border Background="White" BorderBrush="{StaticResource BorderLightBrush}" BorderThickness="1" CornerRadius="4">
                        <Grid>
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="&#xE8B9;" FontFamily="Segoe MDL2 Assets" FontSize="48" Foreground="#DDD" HorizontalAlignment="Center"/>
                                <TextBlock Text="Chưa chọn file để xem trước" Foreground="#999" FontSize="16" Margin="0,15,0,5" HorizontalAlignment="Center"/>
                                <TextBlock Text="Vui lòng chọn mô hình và nhấn 'Xem trước'" Foreground="#BBB" FontSize="13" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Border>

            </Grid>
        </Grid>


    </Grid>
</Window>
